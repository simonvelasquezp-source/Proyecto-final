<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.DashboardController"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <Label fx:id="lblBienvenida"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 15;" />
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER">
            <Label text="Tus monederos:" style="-fx-font-size: 16px;" />
            <ListView fx:id="listaMonederos" prefWidth="300" prefHeight="200" />
            <HBox spacing="15" alignment="CENTER" padding="10">
                <Button text="Operaciones" fx:id="btnOperaciones" />
                <Button text="Historial" fx:id="btnHistorial" />
            </HBox>
        </VBox>
    </center>

</BorderPane>


