<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox spacing="10"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controlers.ReporteController"
      style="-fx-padding: 20;">

    <Label text="Reporte Financiero"
           style="-fx-font-size: 22px; -fx-font-weight: bold;" />

    <TextArea fx:id="txtReporte"
              wrapText="true"
              editable="false"
              style="-fx-font-size: 14; -fx-control-inner-background: #f7f7f7;"
              prefWidth="500"
              prefHeight="400" />

    <Button text="Cerrar"
            onAction="#cerrarVentana"
            style="-fx-font-size: 16; -fx-padding: 10;" />

</VBox>


